{
  "name": "Coq Development Container",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "settings": {
    "terminal.integrated.shell.linux": "/bin/bash"
  },
  "extensions": [
    "ocamllabs.ocaml-platform",
    "coq.coq",
    "maximedenes.vscoq",
    "gares.elpi-lang",
    "gares.coq-elpi-lang"
  ],
  "postCreateCommand": "opam install vscoq-language-server"
}
