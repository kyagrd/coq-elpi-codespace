{
  "name": "Coq-Elpi Development Container",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "settings": {
    "terminal.integrated.shell.linux": "/bin/bash",
    "extensions.autoUpdate": false
  },
  "extensions": [
    "ocamllabs.ocaml-platform",
    "coq.coq",
    "maximedenes.vscoq@2.2.1",
    "gares.elpi-lang",
    "gares.coq-elpi-lang"
  ],
  "postCreateCommand": "opam install -y vscoq-language-server"
}
